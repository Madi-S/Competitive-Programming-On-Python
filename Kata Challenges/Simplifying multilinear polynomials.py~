
def simplify(poly):
    # Just for adding compound
    poly += '+'
    if not poly[0] in '+-':
        poly = '+' + poly
    
    compounds = []
    compound = ''

    for char in poly:
        if char in '+-':
            if compound:
                compound = ''.join(sorted(compound))
                compounds.append((sign, compound))
                compound = ''
            
            sign = char
        
        else:
            compound += char
    
    return compounds

